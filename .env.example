# Galaxy Mail Analyzer Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================

# Anthropic Claude API key for email analysis
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# Voyage AI API key for embeddings
# Get yours at: https://dash.voyageai.com/
VOYAGE_API_KEY=pa-...

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite (default, good for development and small deployments)
DATABASE_URL=sqlite:///./data/galaxy_mail.db

# PostgreSQL (for larger deployments)
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/galaxy_mail

# =============================================================================
# Vector Store
# =============================================================================

# Directory for ChromaDB persistence
CHROMA_PERSIST_DIR=./data/chroma

# =============================================================================
# Mailing List Configuration
# =============================================================================

# HyperKitty base URL
HYPERKITTY_BASE_URL=https://lists.galaxyproject.org

# Mailing list address
MAILING_LIST_ADDRESS=galaxy-bugs@lists.galaxyproject.org

# =============================================================================
# Knowledge Base (Discourse)
# =============================================================================

# Galaxy Help Discourse instance
DISCOURSE_HOST=https://help.galaxyproject.org

# Optional: API credentials for higher rate limits
# Leave empty for public read-only access
DISCOURSE_API_KEY=
DISCOURSE_API_USERNAME=

# =============================================================================
# Analysis Settings
# =============================================================================

# Claude model for analysis (claude-sonnet-4-5-20250929 recommended for cost/quality balance)
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Voyage AI model for embeddings
VOYAGE_MODEL=voyage-3.5

# Embedding dimensions
EMBEDDING_DIMENSIONS=1024

# Minimum emails required for clustering
MIN_CLUSTER_SIZE=50
